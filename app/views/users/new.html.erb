<h1>Sign Up</h1>

<% if flash[:errors]%>
	<% flash[:errors].each do |error| %>
		<%= error %>
	<% end %>
<% end %>

<form action="<%= users_url %>" method="post" enctype="multipart/form-data">
	<%= auth_token %>
	
	<label>
		*E-mail
		<input type="text" name="user[email]" value="<%= @user.email %>" placeholder="email">
	</label>
  <br>
  <br>
  
	<label>
		Username
		<input type="text" name="user[username]" value="<%= @user.username %>" placeholder="username">
	</label>
  <br>
  <br>
	
	<label>
		*Password
		<input type="password" name="user[password]" value="<%= @user.password %>" placeholder="password">
	</label>
  <br>
  <br>
  
  <label>
    Choose Profile Picture
    <input type="file" name="user[picture]">
  </label>
  <br>
  <br>
  
  Fields with '*' are required.
  <br>
  <br>
	 
	<button>Sign Up</button>
</form>