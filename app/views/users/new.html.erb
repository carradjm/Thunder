<h1>Sign Up</h1>

<% if flash[:errors]%>
	<% flash[:errors].each do |error| %>
		<%= error %>
	<% end %>
<% end %>

<form action="<%= users_url %>" method="post">
	<%= auth_token %>
	
	<label>
		E-mail
		<input type="text" name="user[email]" value="<%= @user.email %>" placeholder="email">
	</label>
	
	<label>
		Password
		<input type="password" name="user[password]" value="<%= @user.password %>" placeholder="password">
	</label>
	
	<button>Sign Up</button>
</form>