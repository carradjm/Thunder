<!DOCTYPE html>
<html>
  <head>
    <title>FinalProject</title>
    <%= stylesheet_link_tag    "application", media: "all" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>
    <link rel="stylesheet" type="text/css" href="http://fonts.googleapis.com/css?family=Lato">
    <script src='https://api.tiles.mapbox.com/mapbox.js/v2.0.1/mapbox.js'></script>
    <link href='https://api.tiles.mapbox.com/mapbox.js/v2.0.1/mapbox.css' rel='stylesheet'>
    <script>
    audiojs.events.ready(function() {
      var as = audiojs.createAll();
    });
    </script>
  </head>
  <body>
    <header class="header">
      <div class="header wrap group">
        
        <nav class="nav-left">
          <% if current_user %>
            <ul class='group'>
              <li><a href="/#/">Stream</a></li>
              <li><a href="<%= genres_url %>">Explore</a></li>
            </ul>
          <% end %>
        </nav>
    
        <nav class="nav-right">
          <% if logged_in? %>
          <ul class="group">
            <li><a href="<%= new_song_url %>">Upload</a></li>
            <li><a href="/#/users/<%= current_user.id %>"><%= current_user.username %></a></li>
            <li><a href="/#/notifications">Notifications</a></li>
            <li><a href="<%= edit_user_url(current_user) %>">*</a></li> 
            <li><%= link_to "Sign Out", session_url, method: :delete %>	
          </ul>
          <% end %>
        </nav>
   
      </div>
    </header>
  
    <div class="main group">
    <%= yield %>
    </div>

    <footer>
      <audio id="audio-player" src="http://s3.amazonaws.com/Soundcloud-Clone-Malcolm-Dev/songs/tracks/000/000/002/original/Looking_glass_-_Brandi_you're_a_fine_girl.mp3?1409251382" preload="auto">
    </footer>
  </body>  
</html>
