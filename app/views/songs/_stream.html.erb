<section class="song-stream group">
  <div class="song-image">
    <% if song.image.path.nil? %>
      <img src="<%= asset_path("Daft-Punk.jpg") %>" width="200" height="200" alt="Daft Punk">
    <% else %>
      <%= image_tag song.image.url(:standard) %>
    <% end %>
  </div>
  
  <div class="song-info">
    <ul class="group">
      <div class="song-artist-title">
        <li class="song-artist"><a href="<%= user_url(song.uploader) %>"><%= song.uploader.username %></a></li>
        <li class="song-title"><a href="<%= song_url(song.id) %>"><%= song.title %></a></li>
      </div>
      
      <div class="music-player-widget"></div> 
      
      <div class="song-buttons group">
        <li><%= render partial: "songs/like_button", locals: {song: song} %></li>
      
        <li><%= render partial: "playlist_songs/new", locals: {song: song}%></li>
        
        <li><%= song.genre.name %></li>
      </div>
    </ul>
  </div>
<section>