<section class="song-stream group">
  <div class="song-image">
    <% if @song.image.path.nil? %>
      <img src="<%= asset_path("Daft-Punk.jpg") %>" width="200" height="200" alt="Daft Punk">
    <% else %>
      <%= image_tag @song.image.url(:standard) %>
    <% end %>
  </div>
  
  <div class="song-info">
    <ul class="group">
      <div class="song-artist-title">
        <li class="song-artist"><%= @song.artist %></li>
    
        <li class="song-title"><%= @song.title %></li>
      </div>
      
      <div class="music-player-widget">
        <li>Music Player</li>
      </div> 
      
      <div class="song-buttons group">
        <li><%= render partial: "like_button", locals: {song: @song} %></li>
      
        <li><%= link_to "Add to Playlist", new_playlist_song_url%></li>
      </div>
    </ul>
  </div>
<section>
