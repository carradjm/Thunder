<h1>Upload New Song</h1>

<% if flash[:errors]%>
	<% flash[:errors].each do |error| %>
		<%= error %>
	<% end %>
<% end %>

<form action="<%= songs_url %>" method="post" enctype="multipart/form-data">
	<%= auth_token %>
	
	<label>
		Title
		<input type="text" name="song[title]" value="<%= @song.title %>" placeholder="title">
	</label>
	<br>
	
	<label>
		Artist
		<input type="text" name="song[artist]" value="<%= @song.artist %>" placeholder="artist">
	</label>
	<br>
	
	<label>
		Description
		<textarea name="song[description]" value="<%= @song.description %>" placeholder="description"></textarea>
	</label>
	<br>
	
	<label>
		Genre
		<textarea name="song[genre]" value="<%= @song.genre %>" placeholder="genre"></textarea>
	</label>
	<br>
  
  <label>
    Choose File
    <input type="file" name="song[track]">
  </label>
	
	<button>Upload New Song</button>
</form>