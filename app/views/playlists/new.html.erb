<h1>Create New Playlist</h1>

<% if flash[:errors]%>
	<% flash[:errors].each do |error| %>
		<%= error %>
	<% end %>
<% end %>

<form action="<%= playlists_url %>" method="post">
	<%= auth_token %>
	
	<label>
		Title
		<input type="text" name="playlist[title]" value="<%= @playlist.title %>" placeholder="title">
	</label>
	<br>
	<br>
	
	<label>
		Description
		<textarea name="playlist[description]" value="<%= @playlist.description %>" placeholder="description"></textarea>
	</label>
	<br>
	<br>
	
	<label>
		Genre
		<textarea name="playlist[genre]" value="<%= @playlist.genre %>" placeholder="genre"></textarea>
	</label>
	<br>
	<br>
	
	<label>
		Songs
	<input type="checkbox" name="playlist[songs][]" id="cat_color_black" value="black">
	  <label for="cat_color_black">Black</label>
	</label>
  <br>
	<br>
	
	<button>Upload New Song</button>
</form>