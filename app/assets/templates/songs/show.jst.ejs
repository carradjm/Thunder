<div class="song-show-info">
  <div class="song-show-artist">
    <a href="/#/users/<%= song.escape('user_id') %>">
      <%= song.escape('uploader') %>
    </a>
  </div>

  <div class="song-show-title">
    <%= song.escape('title') %>
  </div>

  <audio class="music-player-widget"></audio>

  <div class="song-show-buttons group">
    <% if (Thunder.currentUser.likes().findWhere({id: song.id})) { %>
      <div id="unlike-song">Unlike Song</div>
    <% } else { %>
      <div id="like-song">Like Song</div>
    <% } %>
      <div id="add-to-playlist">Add To Playlist</div>
    </div>
</div>

<button id="add-comment">Add Comment</button>

<div class="song-show-image">
  <img src="<%= song.escape('image') %>"></img>
</div>